<resources>

    <!-- Base application theme. -->
    <color name="white">#FFFFFF</color>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">#FFFFFF</item> <!-- Change to white for light mode -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item> <!-- Typically set to false for full backgrounds -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Dropdown specific styles -->
        <item name="android:textColorHint">#808080</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

</resources>

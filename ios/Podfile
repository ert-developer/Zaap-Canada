# Set the platform and version
platform :ios, '14.0'

$RNFirebaseAsStaticFramework = true

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Prepare React Native project
prepare_react_native_project!

# Set Flipper configuration
flipper_config = ENV['NO_FLIPPER'] == "1" ? FlipperConfiguration.disabled : FlipperConfiguration.enabled

# Check if static/dynamic framework linkage is required
linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
else
  # Default to static frameworks
  use_frameworks! :linkage => :static
end

target 'Zaap' do
  config = use_native_modules!

  # React Native integration
  use_react_native!(
    :path => config[:reactNativePath],
    # Hermes is now enabled by default. Disable by setting this flag to false.
    # :hermes_enabled => flags[:hermes_enabled],
    # :fabric_enabled => flags[:fabric_enabled],
    # Enables Flipper.
    # :flipper_configuration => flipper_config,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Firebase dependencies with modular headers for static frameworks
  pod 'Firebase/Core', :modular_headers => true
  pod 'Firebase/Auth', :modular_headers => true
  pod 'Firebase/Storage', :modular_headers => true
  pod 'Firebase/AppCheck', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  pod 'GoogleUtilities', :modular_headers => true

  target 'ZaapTests' do
    inherit! :complete
    # Add your testing dependencies here
  end

  # Post-install hook to fix Xcode 12.5+ and M1 chip issues
  post_install do |installer|
    react_native_post_install(installer, config[:reactNativePath])
    __apply_Xcode_12_5_M1_post_install_workaround(installer)
  end
end
